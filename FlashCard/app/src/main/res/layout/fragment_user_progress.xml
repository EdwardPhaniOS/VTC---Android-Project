<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProgressFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/total_cards_text"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Total Cards:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/total_cards_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_decks_text" />

    <TextView
        android:id="@+id/total_cards_number"
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="7dp"
        android:text="1"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/total_cards_text"
        app:layout_constraintTop_toBottomOf="@+id/total_decks_number" />

    <TextView
        android:id="@+id/total_decks_text"
        android:layout_width="114dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:text="Total Decks:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/total_decks_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_decks_number"
        android:layout_width="64dp"
        android:layout_height="34dp"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/total_decks_text"
        tools:layout_editor_absoluteY="77dp" />

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="411dp"
        android:layout_height="444dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="8dp"
        android:background="@color/fui_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_cards_text" />

</androidx.constraintlayout.widget.ConstraintLayout>