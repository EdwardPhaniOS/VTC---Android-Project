<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAFA"
    tools:context=".fragments.UserProgressFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/total_cards_text"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Total Cards:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_decks_text" />

    <TextView
        android:id="@+id/total_cards_number"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="loading"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/total_cards_text"
        app:layout_constraintStart_toEndOf="@+id/total_cards_text" />

    <TextView
        android:id="@+id/total_decks_text"
        android:layout_width="114dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Total Decks:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_decks_number"
        android:layout_width="200dp"
        android:layout_height="21dp"
        android:text="loading"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/total_decks_text"
        app:layout_constraintStart_toEndOf="@+id/total_decks_text" />

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="411dp"
        android:layout_height="444dp"
        android:layout_marginTop="55dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_cards_text" />

</androidx.constraintlayout.widget.ConstraintLayout>