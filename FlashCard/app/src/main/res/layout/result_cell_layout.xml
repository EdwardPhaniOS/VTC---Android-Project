<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    card_view:cardBackgroundColor="#FAE9F1EA"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"><![CDATA[
    >

    ]]>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="18dp"
        android:background="#00E71212"
        android:backgroundTint="#00FDFDFD"
        card_view:layout_constraintStart_toEndOf="@+id/current_card_status"
        card_view:layout_constraintTop_toBottomOf="@+id/textView7"
        card_view:srcCompat="@drawable/icon_big_arrow" />

    <ImageView
        android:id="@+id/description_arrow"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        card_view:layout_constraintStart_toEndOf="@+id/current_card_status"
        card_view:layout_constraintTop_toBottomOf="@+id/textView7"
        card_view:srcCompat="@drawable/icon_arrow_down" />

    <TextView
        android:id="@+id/question_title"
        android:layout_width="368dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="Where are you from?"
        android:textSize="12sp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/question_number" />

    <TextView
        android:id="@+id/your_answer"
        android:layout_width="250dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="Hello world"
        android:textSize="12sp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView10"></TextView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Your answer"
        android:textSize="12sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/question_title" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Correct Answer"
        android:textSize="12sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/your_answer" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Your card status"
        android:textSize="12sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/correct_answer" />

    <TextView
        android:id="@+id/current_card_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#F50218"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/new_card_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:background="#ECD509"
        card_view:layout_constraintStart_toEndOf="@+id/imageView"
        card_view:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/question_number"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Question 1 of 2"
        android:textSize="12sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/correct_answer"
        android:layout_width="250dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="Loading"
        android:textSize="12sp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>