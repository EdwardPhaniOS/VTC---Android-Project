<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TestQuestionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Your score: "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewShowScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="18/20 for 90% "
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonTestRetake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_button_blue_default"
                android:backgroundTint="@color/cardBlue"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="Retake"
                android:textColor="#F9F9F9"
                android:textSize="20dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonTestExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_button_total_default"
                android:backgroundTint="#794CCA"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="Exit"
                android:textColor="#F9F9F9"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonTestViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_button_training_red"
            android:backgroundTint="@color/cardRedBlur"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="View Results"
            android:textColor="#F9F9F9"
            android:textSize="20dp" />

    </LinearLayout>
</FrameLayout>