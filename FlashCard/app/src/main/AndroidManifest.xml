<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.flashcard">

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LearnActivity" />
        <activity
            android:name=".ManageFlashcardsActivity"
            android:theme="@style/AppTheme.NoActionBarNghia" />
        <activity android:name=".SurveyActivity" />
        <activity
            android:name=".DeckDetailActivity"
            android:theme="@style/AppTheme.NoActionBarNghia" >

        </activity>
        <activity
            android:name=".UserProgress"
            android:label="@string/title_activity_user_progress"
            android:theme="@style/AppTheme.NoActionBarNghia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBarNghia" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarNghia"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>